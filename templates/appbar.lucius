nav {
  background-color: #{primaryColor};
  box-shadow: 0px 3px 3px rgba(0, 0, 0, 0.16), 0px 3px 3px rgba(0, 0, 0, 0.23);
  margin-bottom: 0.5em;
  margin-left: -15px;
  margin-right: -15px;

  p,a {
    color: white;
    opacity: 0.87;
  }
}

.navbar-header {
  float:left;
  margin-left:0;
  margin-right:0;
}

.navbar-nav {
  float:left;
  margin:0;

  > li {
    float:left;

    > a {
      padding-top: 15px;
      padding-bottom: 15px;
    }
  }
}
