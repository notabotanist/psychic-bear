.square-box {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.square-box:before {
  content: "";
  display: block;
  padding-top: 75%;
}

.square-content {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;

  div {
    display: table;
    width: 100%;
    height: 100%;
  }
  span {
    display: table-cell;
    text-align: center;
    vertical-align: middle;
  }
}
